# Production Environment Variables (non-sensitive)
# This file can be committed to Git

# Django Settings
DEBUG=False
DJANGO_SETTINGS_MODULE=cabana_project.settings

# Allowed hosts for production
ALLOWED_HOSTS=*.run.app,your-custom-domain.com

# CSRF settings for production
CSRF_TRUSTED_ORIGINS=https://*.run.app,https://your-custom-domain.com

# Database settings (production)
# DATABASE_URL will be set via secrets or Cloud SQL connection

# Cache settings
CACHE_BACKEND=redis

# Email settings (production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Logging level
LOG_LEVEL=INFO

# File upload settings
MAX_UPLOAD_SIZE=52428800

# Feature flags
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False

# Security settings
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Static files
STATIC_ROOT=/app/staticfiles
STATICFILES_STORAGE=whitenoise.storage.CompressedManifestStaticFilesStorage